{
  "name": "versa-app",
  "version": "1.0.0",
  "description": "Social Network",
  "private": true,
  "main": "server/index.js",
  "scripts": {
    "build-css": "grunt",
    "build-client": "webpack --config webpack.client.config.js",
    "build-server": "webpack --config webpack.server.config.js",
    "build": "npm run build-css && npm run build-client && npm run build-server",
    "dev-css": "grunt && grunt watch",
    "dev-watch": "set NODE_ENV=development&& concurrently \"webpack --config webpack.client.config.js --progress --watch\" \"babel-node server/index.js\"",
    "dev": "concurrently \"npm run dev-watch\" \"npm run dev-css\"",
    "start": "set NODE_ENV=production&& node dist/server.bundle.js",
    "test": "set NODE_ENV=development&& mocha --exit --recursive --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dig1t/versa.git"
  },
  "author": "dig1t",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^6.0.12",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "babel-loader": "^8.2.3",
    "babel-watch": "^7.6.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "classnames": "^2.3.1",
    "ejs-loader": "^0.5.0",
    "grunt": "^1.4.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^2.0.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-postcss": "^0.9.0",
    "history": "^5.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^9.1.3",
    "prop-types": "^15.7.2",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-redux": "^7.2.6",
    "react-refresh": "^0.11.0",
    "react-router-dom": "^6.0.2",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.0",
    "sass": "^1.49.0",
