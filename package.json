{
  "name": "versa-app",
  "version": "0.0.1",
  "description": "social media app",
  "main": "runner/index.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "set NODE_ENV=development&& mocha --exit --recursive --require @swc/register",
    "build:client": "set NODE_ENV=production&& webpack --config webpack.client.config.cjs",
    "build:server": "webpack --config webpack.server.config.cjs",
    "build": "yarn run build:client && yarn run build:server",
    "serve": "set NODE_ENV=production&& node app/server/index.js",
    "start": "set NODE_ENV=development&& node app/server/index.js",
    "dev": "set NODE_ENV=development&& nodemon -w ./runner/index.js",
    "lint": "eslint \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dig1t/versa-app.git"
  },
