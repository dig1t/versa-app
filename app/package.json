{
  "name": "versa-app",
  "version": "1.0.0",
  "description": "Social Network",
  "private": true,
  "main": "dist/server.bundle.js",
  "scripts": {
    "build:css": "grunt",
    "build:client": "webpack --config webpack.client.config.js --progress profile",
    "build:server": "webpack --config webpack.server.config.js --progress profile",
    "build": "npm run build:css && npm run build:client && npm run build:server",
    
    "dev:css": "grunt && grunt watch",
    
    "dev:webpack-watch": "set NODE_ENV=development&& webpack --config webpack.client.config.js --progress profile --watch",
    "dev:server-watch": "set NODE_ENV=development&& babel-node server/index.js",
    
    "dev:server-reload": "set NODE_ENV=development&& babel-watch server/index.js",
    
    "dev:watch": "concurrently \"npm run dev:webpack-watch\" \"npm run dev:server-watch\"",
    "dev:watch-reload": "concurrently \"npm run dev:webpack-watch\" \"npm run dev:server-reload\"",
    
    "dev:reload": "concurrently \"npm run dev:watch-reload\" \"npm run dev:css\"",
    "dev": "concurrently \"npm run dev:watch\" \"npm run dev:css\"",
    
    "start": "set NODE_ENV=production&& node dist/server.bundle.js",
    
    "test": "set NODE_ENV=development&& mocha --exit --recursive --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dig1t/versa-app.git"
  },
  "author": "dig1t",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dig1t/versa-app/issues"
  },
  "homepage": "https://github.com/dig1t/versa-app#readme",
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "globalDependencies": {
    "concurrently": "^7.1.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "connect-mongo": "^4.6.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "mongoose": "^7.0.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.21.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@reduxjs/toolkit": "^1.9.3",
    "@svgr/webpack": "^6.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.4",
    "babel-loader": "^9.1.2",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "babel-watch": "^7.7.2",
    "bottleneck": "^2.19.5",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "classnames": "^2.3.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-concat": "^2.1.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "history": "^5.3.0",
    "mocha": "^10.2.0",
    "passport-oauth2": "^1.7.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.9.0",
    "redux": "^4.2.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.4.2",
    "sass": "^1.59.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-middleware": "^6.0.1",
