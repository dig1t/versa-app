{
  "name": "versa-app",
  "version": "1.0.0",
  "description": "Social Network",
  "private": true,
  "main": "dist/server.bundle.js",
  "scripts": {
    "build-css": "grunt",
    "build-client": "webpack --config webpack.client.config.js",
    "build-server": "webpack --config webpack.server.config.js",
    "build": "npm run build-css && npm run build-client && npm run build-server",
    "dev-css": "grunt && grunt watch",
    "dev-webpack-watch": "set NODE_ENV=development&& webpack --config webpack.client.config.js --progress --watch",
    "dev-server-watch": "set NODE_ENV=development&& babel-node server/index.js",
    "dev-watch": "concurrently \"npm run dev-webpack-watch\" \"npm run dev-server-watch\"",
    "dev": "concurrently \"npm run dev-watch\" \"npm run dev-css\"",
    "start": "set NODE_ENV=production&& node dist/server.bundle.js",
    "test": "set NODE_ENV=development&& mocha --exit --recursive --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dig1t/versa-app.git"
  },
  "author": "dig1t",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dig1t/versa-app/issues"
  },
  "homepage": "https://github.com/dig1t/versa-app#readme",
  "nodemonConfig": {
    "ignore": [
      "build/*"
    ]
  },
  "globalDependencies": {
    "concurrently": "^7.1.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.1",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^6.5.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "redis": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-react-jsx": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@reduxjs/toolkit": "^1.8.3",
    "autoprefixer": "^10.4.8",
    "axios": "^0.27.2",
    "babel-loader": "^8.2.5",
    "babel-watch": "^7.7.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "classnames": "^2.3.1",
    "ejs-loader": "^0.5.0",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-concat": "^2.1.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "history": "^5.3.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^10.0.0",
    "prop-types": "^15.8.1",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.4.1",
    "sass": "^1.54.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
