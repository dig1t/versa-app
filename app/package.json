{
  "name": "versa-app",
  "version": "1.0.0",
  "description": "Social Network",
  "private": true,
  "scripts": {
    "build:css": "grunt",
    "build:client": "set NODE_ENV=production&& webpack --config webpack.client.config.cjs",
    "build:server": "webpack --config webpack.server.config.cjs",
    "build": "npm run build:css && npm run build:client && npm run build:server",
    "dev:css": "grunt && grunt watch",
    "dev:webpack-watch": "set NODE_ENV=development&& webpack --config webpack.client.config.cjs --watch",
    "dev-server:watch": "nodemon ./dist/server/server.bundle.js",
    "dev:watch": "concurrently \"npm run dev:webpack-watch\" \"npm run dev:server-watch\"",
    "dev": "set NODE_ENV=development&& node ./compiler/index.js",
    "start": "set NODE_ENV=production&& node dist/server.bundle.js",
    "test": "set NODE_ENV=development&& mocha --exit --recursive --require @swc/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dig1t/versa-app.git"
  },
  "author": "dig1t",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dig1t/versa-app/issues"
  },
  "homepage": "https://github.com/dig1t/versa-app#readme",
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "globalDependencies": {
    "concurrently": "^7.1.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "connect-mongo": "^5.0.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "mongoose": "^7.0.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@reduxjs/toolkit": "^1.9.3",
    "@svgr/webpack": "^7.0.0",
    "@swc/core": "^1.3.42",
    "@swc/helpers": "^0.4.14",
    "@swc/register": "^0.1.10",
    "@types/cookie-parser": "^1.4.3",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.4",
    "bottleneck": "^2.19.5",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "chalk": "4.1.2",
    "chokidar": "^3.5.3",
    "classnames": "^2.3.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-concat": "^2.1.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "history": "^5.3.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "passport-oauth2": "^1.7.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.9.0",
    "redux": "^4.2.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.4.2",
    "sass": "^1.60.0",
    "swc-loader": "^0.2.3",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-dev-middleware": "^6.0.1",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
