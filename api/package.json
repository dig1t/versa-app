{
  "name": "versa-api",
  "version": "1.0.0",
  "description": "Versa API",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "nodemonConfig": {
    "delay": 100
  },
  "scripts": {
    "build": "swc src -D -d dist",
    "dev:compile": "swc src -w -D -d dist",
    "dev:watch": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "dev": "concurrently \"npm run dev:compile\" \"npm run dev:watch\"",
    "start": "set NODE_ENV=production&& node ./dist/index.js",
    "test": "set NODE_ENV=development&& mocha",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dig1t/versa-app.git"
  },
  "author": "dig1t",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dig1t/versa-app/issues"
  },
  "homepage": "https://github.com/dig1t/versa-app#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bottleneck": "^2.19.5",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mongoose": "^7.0.1",
    "oidc-provider": "^8.1.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.42",
    "@swc/helpers": "^0.4.14",
    "@swc/register": "^0.1.10",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^2.0.22",
    "swc-loader": "^0.2.3"
  }
}
